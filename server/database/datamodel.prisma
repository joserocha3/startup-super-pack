enum UserRole {
  ADMIN
  CLIENT
}

type User {
  id: ID! @unique
  email: String! @unique
  authId: String @unique
  firstName: String!
  lastName: String!
  role: UserRole!  
}

type EquipmentType {
  id: ID! @unique
  description: String!
  equipments: [Equipment!]!
}

type Equipment {
  id: ID! @unique
  description: String!
  type: EquipmentType!
  owner: User!
  availabilities: [Availability!]!
}

type Availability {
  id: ID! @unique
  equipment: Equipment!
  start: DateTime!
  end: DateTime!
  booked: Boolean! @default(value: "false")
}
